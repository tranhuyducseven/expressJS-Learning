<div class="mt-4">
    <div class="row">

        {{#each posts}}
        <div class="col-sm-6 col-lg-4 gy-4 g-4">
            <div class="card" style="width: 18rem;">
                <img src="{{this.image}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>